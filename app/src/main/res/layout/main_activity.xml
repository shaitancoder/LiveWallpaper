<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/rgLW">

        <RadioButton
            android:id="@+id/rbSpiral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spiral" />

        <RadioButton
            android:id="@+id/rbRasengan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rasengan" />

        <RadioButton
            android:id="@+id/rbRasengan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naruto Rasengan" />

        <RadioButton
            android:id="@+id/rbCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cat" />

        <Button
            android:id="@+id/btnChangeLW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Live Wallpaper"
            android:padding="20dp"/>
    </RadioGroup>

</LinearLayout>
